@using IDIMWorkBranchProject.Extentions
@using IDIMWorkBranchProject.Models.Wbpm
@model WorkOrderVm

@{
    ViewBag.Title = "Create";
    var bnCulture = new System.Globalization.CultureInfo("bn-BD");
    string banglaDate = Model.WorkOrderDate?.ToString("dd-MMM-yyyy", bnCulture);
}
<div class="page-title">
    <div class="pull-left">
        <h3 class="title"></h3>
    </div>
    <div class="pull-right hidden-xs">
        <ol class="breadcrumb">
            <li>
                <a href="#"><i class="fa fa-home"></i>Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("List","WorkOrder")">
                    <i class="fa fa-list" aria-hidden="true"></i>
                    WorkOrder
                </a>
            </li>
            <li class="active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>

<section class="box">
    <header class="panel_header">
        <h2 class="title pull-left">কার্যাদেশ সংযুক্ত করুন</h2>
        <div class="actions panel_actions pull-right">
            <a href="@Url.Action("List","WorkOrder")" class="btn">
                <i class="fa fa-list" aria-hidden="true"></i>
                List
            </a>
            <a class="box_toggle fa fa-chevron-down"></a>
        </div>
    </header>
    <div class="content-body">
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("Create", "WorkOrder", FormMethod.Post, new { enctype = "multipart/form-data", id = "WorkOrder-create-form", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.ProjectWorkId)
                    <div class="row">
                        <div class="form-display col-md-12">
                            @Html.LabelFor(m => m.ProjectWorkTitleB, new { @class = "form-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.ProjectWorkTitleB, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="form-display col-md-6">
                            @Html.LabelFor(m => m.LetterNo, new { @class = "form-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.LetterNo, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.LetterNo)
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.WorkOrderDate, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.WorkOrderDate, "{0:dd-MMM-yyyy}", new { @class = "form-control datepicker" })
                                @Html.ValidationMessageFor(model => model.WorkOrderDate)
                            </div>
                        </div>
                        <div class="form-display col-md-6">
                            @Html.LabelFor(m => m.WorkOrderDateB, new { @class = "form-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.WorkOrderDateB, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.WorkOrderDateB)
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.StartDate, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.StartDate, "{0:dd-MMM-yyyy}", new { @class = "form-control datepicker" })
                                @Html.ValidationMessageFor(model => model.StartDate)
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.EndDate, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.EndDate, "{0:dd-MMM-yyyy}", new { @class = "form-control datepicker" })
                                @Html.ValidationMessageFor(model => model.EndDate)
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.HandOverDate, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.HandOverDate, "{0:dd-MMM-yyyy}", new { @class = "form-control datepicker" })
                                @Html.ValidationMessageFor(model => model.HandOverDate)
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.DocumentFile, new { @class = "col-md-3 form-label" })
                            <div class="col-md-9">
                                <!-- PDF Preview Section -->
                                <embed id="pdfPreview"
                                       src="@(!string.IsNullOrEmpty(Model.ScanDocument) ? Url.Content("~/Documents/WorkOrderFiles/" + Model.ScanDocument) : "")"
                                       type="application/pdf"
                                       width="100" height="100" />
                                <p>
                                    <a id="pdfLink" href="@Url.Content("~/Documents/WorkOrderFiles/" + Model.ScanDocument)" target="_blank">
                                        View Full PDF
                                    </a>
                                </p>
                                @Html.TextBoxFor(m => m.DocumentFile, new { @class = "form-control", type = "file", accept = ".pdf", id = "pdfInput", onchange = "previewPDF(event)" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.OfficerId, new { @class = "col-md-3 form-label" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(m => m.OfficerId, Model.OfficersDropdown, "Select One", new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.OfficerId)
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.HeadAssistantId, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(m => m.HeadAssistantId, Model.HeadAssistantDropdown, "Select One", new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.HeadAssistantId)
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.ConcernedEngineerId, new { @class = "col-md-3 form-label" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(m => m.ConcernedEngineerId, Model.ConcernedEngineerDropdown, "Select One", new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.ConcernedEngineerId)
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.SectionICId, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(m => m.SectionICId, Model.SectionICTDropdown, "Select One", new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.SectionICId)
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.BranchClerkId, new { @class = "col-md-3 form-label" })
                            <div class="col-md-9">
                                @Html.DropDownListFor(m => m.BranchClerkId, Model.BranchClerkDropdown, "Select One", new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.BranchClerkId)
                            </div>
                        </div>
                    </div>

                    <div class="pull-right">
                        <input type="submit" class="btn btn-success" value="Save" />
                        <input type="reset" class="btn" value="Clear" />
                    </div>
                }
            </div>
        </div>
    </div>
</section>
@section scripts{

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <script src="https://bangla.plus/scripts/bangladatetoday.min.js"></script>


    <script>
        function previewPDF(event) {
            var file = event.target.files[0];
            if (file) {
                var fileURL = URL.createObjectURL(file);
                document.getElementById('pdfPreview').src = fileURL;
                document.getElementById('pdfLink').href = fileURL;
            }
        }


    </script>
}

