@model IDIMWorkBranchProject.Models.Wbpm.SignatoryAuthorityVm

@{
    ViewBag.Title = "Create";
}

<div id="message"></div>
<div class='col-md-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Signatory Authority</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="#"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                @*<li>
                        <a href="@Url.Action("List","SignatoryAuthority")">
                            <i class="fa fa-list" aria-hidden="true"></i>
                            Signatory Authority
                        </a>
                    </li>*@
                <li class="active">
                    <strong>Update</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box">
        <header class="panel_header">
            <h2 class="title pull-left">Update</h2>
            <div class="actions panel_actions pull-right">
                @*<a href="@Url.Action("List","SignatoryAuthority")" class="btn">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        List
                    </a>*@
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("Edit", "SignatoryAuthority", FormMethod.Post, new { @class = "form-horizontal", id = "ReceivePayment-create-form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.SignatoryAuthorityId)


                        <div class="row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.AuthorityName, new { @class = "col-md-2 form-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.AuthorityName, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.AuthorityName)
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.AuthorityNameB, new { @class = "col-md-2 form-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.AuthorityNameB, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.AuthorityNameB)
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.Designation, new { @class = "col-md-2 form-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Designation, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Designation)
                                </div>
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.DesignationB, new { @class = "col-md-2 form-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.DesignationB, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.DesignationB)
                                </div>
                            </div>
                        </div>

                        <div class="pull-right">
                            <input type="submit" class="btn btn-success" value="Save" />
                            <input type="reset" class="btn" value="Clear" />
                        </div>
                     }
                </div>
            </div>
        </div>
    </section>
</div>
