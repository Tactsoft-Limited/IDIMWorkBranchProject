@model IEnumerable<IDIMWorkBranchProject.Models.Setup.FiscalYearVm>
@{
    ViewBag.Title = "Fiscal Year";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Fiscal Year</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li class="active">
                    <strong>Fiscal Year</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">List</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Create","FiscalYear")" class="btn btn-success">Create New</a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <table id="DataGrid" class="table table-striped table-bordered" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.FiscalYearId)</th>
                            <th>@Html.DisplayNameFor(m => m.FiscalYearDescription)</th>
                            <th>@Html.DisplayNameFor(m => m.StartDate)</th>
                            <th>@Html.DisplayNameFor(m => m.EndDate)</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var v in Model)
                        {
                            <tr>
                                <td>@v.FiscalYearId</td>
                                <td>@v.FiscalYearDescription</td>
                                <td>@v.StartDate.ToString("dd-MMM-yyyy")</td>
                                <td>@v.EndDate.ToString("dd-MMM-yyyy")</td>
                                <td>
                                    <a href="@Url.Action("Edit", "FiscalYear", new {id = v.FiscalYearId})">
                                        <span class="label label-primary"><i class="fa fa-edit"></i> Edit</span>
                                    </a>
                                    <a href="@Url.Action("Delete", "FiscalYear", new {id = v.FiscalYearId})">
                                        <span class="label label-danger"><i class="fa fa-remove"></i> Remove</span>
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#DataGrid').DataTable({
                "aaSorting": [],
                "columns": [
                    { className: "id", searchable: false },
                    null,
                    null,
                    null,
                    { width: "137px", "orderable": false }
                ]
            });
        });
    </script>
}

