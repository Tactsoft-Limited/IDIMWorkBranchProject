@model IDIMWorkBranchProject.Models.User.ApplicationDetailVm
@{
    ViewBag.Title = "Application Details";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Application</h1>
        </div>

        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="#"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("List","User")">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        User
                    </a>
                </li>
                <li class="active">
                    <strong>Menu</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box">
        <header class="panel_header">
            <h2 class="title pull-left">Application</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("List","User")" class="btn">
                    <i class="fa fa-list" aria-hidden="true"></i>
                    User
                </a>
                <a href="@Url.Action("List","Menu")" class="btn">
                    <i class="fa fa-list" aria-hidden="true"></i>
                    Menu
                </a>
                <a href="@Url.Action("Application","User", new{ id = Model.Application.ApplicationId })" class="btn">
                    <i class="fa fa-building-o" aria-hidden="true"></i>
                    Application
                </a>
                <a href="@Url.Action("Device","User", new{ id = Model.Application.ApplicationId })" class="btn">
                    <i class="fa fa-laptop" aria-hidden="true"></i>
                    Device
                </a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <form class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Application.ApplicationId, new { @class = "col-md-2 form-label" })
                            <div class="col-md-10">
                                @Html.DisplayFor(m => m.Application.ApplicationId, new { @disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Application.ApplicationCode, new { @class = "col-md-2 form-label" })
                            <div class="col-md-10">
                                @Html.DisplayFor(m => m.Application.ApplicationCode, new { @disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Application.ApplicationName, new { @class = "col-md-2 form-label" })
                            <div class="col-md-10">
                                @Html.DisplayFor(m => m.Application.ApplicationName, new { @disabled = "disabled" })
                            </div>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <header>

                                <h2 class="title pull-left">
                                    Menus
                                    <span class="badge badge-danger">@Model.Menus.Count</span>
                                </h2>
                            </header>

                            @if (Model.Menus.Any())
                            {
                                <table id="MenuDataGrid" class="table table-striped table-bordered" width="100%" cellspacing="0">
                                    <thead>
                                    <th>Name</th>
                                    </thead>
                                    <tbody>
                                    @foreach (var menu in Model.Menus)
                                    {
                                        <tr>
                                            <td>
                                                @menu.ControllerName
                                            </td>
                                        </tr>

                                    }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p>No menus found.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#MenuDataGrid').DataTable({
                "columns": [
                    null
                ]
            });
        });
    </script>
}