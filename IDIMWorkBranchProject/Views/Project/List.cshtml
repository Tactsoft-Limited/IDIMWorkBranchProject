@using IDIMWorkBranchProject.Extentions
@model IDIMWorkBranchProject.Models.WBP.ProjectSearchVm
@{
    ViewBag.Title = "Project";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Project</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li class="active">
                    <strong>Project</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">List</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Create","Project")" class="btn btn-success">Create New</a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            @using (Html.BeginForm("List", "Project", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.AuthorizeUnitId, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(m => m.AuthorizeUnitId, Model.AuthorizeUnitDropdown, "Select Unit", new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.AuthorizeUnitId)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.FiscalYearId, new {@class = "col-md-4 form-label"})
                            <div class="col-md-8">
                                @Html.DropDownListFor(m => m.FiscalYearId, Model.FiscalYearDropdown, "Select Fiscal Year", new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.FiscalYearId)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.ProjectCode, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.ProjectCode, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ProjectCode)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.ProjectName, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.ProjectName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ProjectName)
                            </div>
                        </div>
                    </div>
                </div>                

                <div class="col-xs-12">
                    <div class="form-group">
                        <input type="submit" class="btn btn-success pull-right" value="Search" />
                    </div>
                </div>
            }
            <div class="row">
                <div class="col-xs-12">
                    <table id="DataGrid" class="table table-striped table-bordered" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Code</th>
                            <th>Project Name</th>
                            <th>Approved</th>
                            <th>Start</th>
                            <th>Capital</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var v in Model.Projects)
                        {
                            <tr>
                                <td>@v.ProjectId</td>
                                <td>@v.ProjectCode</td>
                                <td>@v.ProjectName</td>
                                <td>@v.ApprovalDate.ToNullableShortDateString()</td>
                                <td>@v.ProjectStartDate.ToNullableShortDateString()</td>
                                <td>@v.BudgetCapital</td>
                                <td>
                                    <a href="@Url.Action("Create", "SubProject", new {id = v.ProjectId})">
                                        <span class="label label-info"><i class="fa fa-info"></i> Sub Project</span>
                                    </a>
                                    <a href="@Url.Action("Create", "ReceiptPayment", new {id = v.ProjectId})">
                                        <span class="label label-info"><i class="fa fa-info"></i> Bill Receive</span>
                                    </a>
                                    <a href="@Url.Action("Edit", "Project", new {id = v.ProjectId})">
                                        <span class="label label-primary"><i class="fa fa-edit"></i> Edit</span>
                                    </a>
                                    <a href="@Url.Action("Delete", "Project", new {id = v.ProjectId})">
                                        <span class="label label-danger"><i class="fa fa-remove"></i> Remove</span>
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#DataGrid').DataTable({
                "aaSorting": [],
                "columns": [
                    { className: "id", searchable: false },
                    null,
                    null,
                    { className: "date", searchable: false },
                    { className: "date", searchable: false },
                    null,
                    { width:"315px","orderable": false }
                ]
            });
        });
    </script>
}

