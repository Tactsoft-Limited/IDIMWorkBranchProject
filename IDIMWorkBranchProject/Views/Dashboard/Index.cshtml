@using IDIMWorkBranchProject.Models.Wbpm
@using IDIMWorkBranchProject.Extentions

@model IDIMWorkBranchProject.Models.Dashboard.DashboardVm

@{
    ViewBag.Title = "Dashboard";
}

<div class="row">
    <div class="col-md-6">
        <section class="box ">
            <header class="panel_header">
                <h2 class="title pull-left">প্রকল্প সংক্রান্ত তথ্য</h2>
                <div class="actions panel_actions pull-right">
                    <a class="box_toggle fa fa-chevron-down"></a>
                    <a class="box_setting fa fa-cog" data-toggle="modal" href="#section-settings"></a>
                    <a class="box_close fa fa-times"></a>
                </div>
            </header>
            <div class="content-body">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <td>চলমান প্রকল্প</td>
                            <td class="bold">@Model.OngoingProjects</td>
                        </tr>
                        <tr>
                            <td>সর্বমোট নির্মাণ কাজ</td>
                            <td class="bold">@Model.TotalConstructionWork</td>
                        </tr>
                        <tr>
                            <td>নির্মাণ কাজ চলমান</td>
                            <td class="bold">@Model.ConstructionWorkInProgress</td>
                        </tr>
                        <tr>
                            <td>নির্মাণ কাজ সম্পন্ন</td>
                            <td class="bold">@Model.CompletedConstructionWork</td>
                        </tr>
                    </tbody>
                </table>
