                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <input type="submit" class="btn btn-success pull-right" value="Search" />
                    </div>
                </div>
            }

            <div class="row">
                <div class="col-xs-12">
                    <table id="DataGrid" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Sub Project</th>
                                @*<th>hasCompleted</th>
                                <th>BGOrPayOrder</th>
                                <th>hasCompBGOrPayOrderleted</th>
                                <th>BGConfirmed</th>
                                <th>DesignSent</th>
                                <th>ContractComplete</th>
                                <th>DesignSent</th>*@
                                <th>1st & 2nd Installment</th>
                                <th>3rd & 4rth Installment</th>
                                <th>BGB Miscellaneous Fund Deposit</th>
                                <th>Progress</th>
                                @*<th>IsDelivered</th>
                                <th>IsFinalBillPaid</th>
                                <th>TenPercentGuarantee</th>
                                <th>FivePercentSecurityMoney</th>
                                <th>TenPercentPaidFarm</th>
                                <th>TenPercentPaidSimantoFund</th>
                                <th>ContractorPayable</th>*@
                                <th>Remarks</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var v in Model.SubProjectDetails)
                            {
                                <tr>
                                    <td>@v.SubProjectDetailsId</td>
                                    <td>@v.SubProjectTitle</td>
                                    @*<td>@v.hasCompleted</td>
                                    <td>@v.BGOrPayOrder</td>
                                    <td>@v.hasCompBGOrPayOrderleted</td>
                                    <td>@v.BGConfirmed</td>
                                    <td>@v.ContractComplete</td>
                                    <td>@v.DesignSent</td>*@
                                    <td>@v.Installment1 & @v.Installment2</td>
                                    <td>@v.Installment4 & @v.Installment5</td>
                                    <td>@v.TotalAmmount</td>
                                    <td>@v.BGBMiscellaneousDeposit</td>
                                    <td>@v.Progress</td>
                                    @*<td>@v.IsDelivered</td>
                                    <td>@v.IsFinalBillPaid</td>
                                    <td>@v.TenPercentGuarantee</td>
                                    <td>@v.FivePercentSecurityMoney</td>
                                    <td>@v.TenPercentPaidFarm</td>
                                    <td>@v.TenPercentPaidSimantoFund</td>
                                    <td>@v.ContractorPayable</td>*@
                                    <td>@v.Remark</td>
                                    <td>
                                        <a href="@Url.Action("Edit", "SubProjectDetails", new {id = v.SubProjectDetailsId})">
                                            <span class="label label-primary"><i class="fa fa-edit"></i> Edit</span>
                                        </a>
                                        <a href="@Url.Action("Delete", "SubProjectDetails", new {id = v.SubProjectDetailsId})">
                                            <span class="label label-danger"><i class="fa fa-remove"></i> Remove</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
