@using IDIMWorkBranchProject.Extentions
@using IDIMWorkBranchProject.Models.Wbpm
@model BGBMiscellaneousFundSearchVm
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-title">
    <div class="pull-left">
        <h3 class="title">বিবিধ ফান্ড</h3>
    </div>
    <div class="pull-right hidden-xs">
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>ড্যাশবোর্ড</a>
            </li>
            <li class="active">
                <strong>বিবিধ ফান্ড</strong>
            </li>
        </ol>
    </div>
</div>

<section class="box">
    <header class="panel_header">
        <h2 class="title pull-left">বিবিধ ফান্ড তালিকা</h2>
    </header>
    <div class="content-body">
        <div class="row">
            <div class="col-xs-12">
                <table id="BGBMiscellaneousFund" class="table table-striped table-bordered" width="100%" cellspacing="0">
                </table>
            </div>
        </div>

        <partial name="_ModalPartial" />
    </div>
</section>


@section scripts {

    <script>
        $(document).ready(function () {
            var table = $('#BGBMiscellaneousFund').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": baseUrl + "/BGBMiscellaneousFund/LoadData",  // Make sure this is correct
                    "type": "POST",
                    "contentType": "application/json",  // Sending JSON data
                    "data": function (d) {
                        // Manually create a JSON object for the POST request
                        return JSON.stringify({
                            SearchValue: d.search.value,  // Global search term
                            Draw: d.draw,
                            PageIndex: d.start / d.length,  // Pagination: starting index
                            PageSize: d.length,  // Pagination: number of records per page
                            SortColumn: d.order[0] ? d.columns[d.order[0].column].data : 'FundId',
                            SortDirection: d.order[0] ? d.order[0].dir : 'asc'
                        });
                    },
                    "dataSrc": function (json) {
                        console.log(json.data)
                        return json.data;
                    }
                },
                "columns": [
                    { "data": "FundId", "title": "আইডি", "visible": false },
                    {
                        "data": "ProjectWorkTitleB",
                        "title": "নির্মাণ কাজের নাম",
                        "render": function (data, type, row) {
                            // Assuming 'id' is the unique identifier for the project
                            return `<a href="${baseUrl}/ProjectWork/Details/${row.ProjectWorkId}">${data}</a>`;
                        }
                    },
                    { "data": "LetterNo", "title": "লেটার নং" },
                    {
                        "data": "DepositeDate",
                        "title": "জমার তারিখ",
                        "render": function (data) {
                            if (data && data.startsWith("/Date(")) {
                                var timestamp = parseInt(data.replace("/Date(", "").replace(")/", ""));
                                return new Date(timestamp).toLocaleDateString('en-GB');
                            }
                            return '';
                        }
                    },
                    { "data": "PayOrderNo", "title": "পে-অর্ডার নং" },
                    {
                        "data": "PayOrderDate",
                        "title": "পে-অর্ডার তারিখ",
                        "render": function (data) {
                            if (data && data.startsWith("/Date(")) {
                                var timestamp = parseInt(data.replace("/Date(", "").replace(")/", ""));
                                return new Date(timestamp).toLocaleDateString('en-GB');
                            }
                            return '';
                        }
                    },
                    { "data": "AccountNumber", "title": "অ্যাকাউন্ট নাম্বার" },
                    { "data": "Amount", "title": "পরিমান" }
                ]
            });

            // Apply filters automatically when the user changes any of the filter fields
            $('#StartingDate, #EndingDate').on('change input keyup', function () {
                table.ajax.reload();
            });
        });

    </script>

}
