@model IDIMWorkBranchProject.Models.User.UserVm
@{
    ViewBag.Title = "User";
}

<div class='col-xs-12'>
    <div class="page-title">

        <div class="pull-left">
            <h1 class="title">User</h1>
        </div>

        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("List", "User")">
                        <i class="fa fa-list"></i>
                        User
                    </a>
                </li>
                <li class="active">
                    <strong>Delete</strong>
                </li>
            </ol>
        </div>

    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Delete</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Create","User")" class="btn btn-success">Create New</a>
                <a href="@Url.Action("Edit","User", new { id = Model.UserId })" class="btn btn-success">Edit</a>
                <a href="@Url.Action("List","User")" class="btn">List</a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <form class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.ArmyId, new { @class = "col-md-2 form-label" })
                            <div class="controls col-md-10">
                                @Html.DisplayFor(m => m.ArmyId)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.UserId, new {@class = "col-md-2 form-label"})
                            <div class="controls col-md-10">
                                @Html.DisplayFor(m => m.UserId)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Username, new {@class = "col-md-2 form-label"})
                            <div class="controls col-md-10">
                                @Html.DisplayFor(m => m.Username)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.PersonnelCode, new {@class = "col-md-2 form-label"})
                            <div class="col-md-10">
                                @Html.DisplayFor(m => m.PersonnelCode, new {@class = "form-control", disabled = "disabled"})
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ResourceType, new {@class = "col-md-2 form-label"})
                            <div class="col-md-10">
                                @Html.DisplayFor(m => m.ResourceType, new {@class = "form-control"})
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.UserType, new {@class = "col-md-2 form-label"})
                            <div class="col-md-10">
                                @Html.DisplayFor(m => m.UserType, new {@class = "form-control"})
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 form-label" })
                            <div class="col-md-10">
                                @Html.DisplayFor(m => m.Phone, new { @class = "form-control", disabled = "disabled" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.IsActive, new {@class = "col-md-2 form-label"})
                            <div class="col-md-10">
                                @Html.DisplayFor(m => m.IsActive, new {@class = "form-control skin-flat-green"})
                            </div>
                        </div>
                    </form>
                    @using (Html.BeginForm("Delete", "User", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("UserId")
                        <a href="@Url.Action("List", "User")" class="btn">Cancel</a>
                        <div class="pull-right">
                            <input type="submit" class="btn btn-danger" value="Delete" />
                        </div>
                    }

                </div>
            </div>
        </div>
    </section>
</div>