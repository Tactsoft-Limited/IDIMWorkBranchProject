<section class="box">
    <header class="panel_header">
        <h2 class="title pull-left">পারফরমেন্স সিকিউরিটি / ব্যাংক গ্যারান্টি তালিকা</h2>
    </header>
    <div class="content-body">
        <div class="row">
            <div class="col-xs-12">
                <table id="performanceSecurity" class="table table-striped table-bordered" width="100%" cellspacing="0">
                </table>
            </div>
        </div>

        <partial name="_ModalPartial" />
    </div>
</section>


@section scripts {

    <script>
        $(document).ready(function () {
            var table = $('#performanceSecurity').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": baseUrl + "/PerformanceSecurity/LoadData",  // Make sure this is correct
                    "type": "POST",
                    "contentType": "application/json",  // Sending JSON data
                    "data": function (d) {
                        // Manually create a JSON object for the POST request
                        return JSON.stringify({
                            SearchValue: d.search.value,  // Global search term
                            //StartingDate: $('#StartingDate').val() ? $('#StartingDate').val() : null,
                            //EndingDate: $('#EndingDate').val() ? $('#EndingDate').val() : null,
                            Draw: d.draw,
                            PageIndex: d.start / d.length,  // Pagination: starting index
                            PageSize: d.length,  // Pagination: number of records per page
                            SortColumn: d.order[0] ? d.columns[d.order[0].column].data : 'performanceSecurityId',
                            SortDirection: d.order[0] ? d.order[0].dir : 'asc'
                        });
                    },
                    "dataSrc": function (json) {
                        console.log(json.data)
                        return json.data;
                    }
                },
                "columns": [
                    { "data": "PerformanceSecurityId", "title": "আইডি", "visible": false },
                    {
                        "data": "ProjectWorkTitleB",
                        "title": "নির্মাণ কাজের নাম",
                        //"render": function (data, type, row) {
                        //    // Assuming 'id' is the unique identifier for the project
                        //   /* return `<a href="${baseUrl}/ADPProject/Details/${row.ADPProjectId}">${data}</a>`*/;
                        //}
                    },
                    {
                        "data": "SubmissionDate",
                        "title": "জমার তারিখ",
                        "render": function (data) {
                            if (data && data.startsWith("/Date(")) {
                                var timestamp = parseInt(data.replace("/Date(", "").replace(")/", ""));
                                return new Date(timestamp).toLocaleDateString('en-GB');
                            }
                            return '';
                        }
                    },
                    {
                        "data": "ExpiryDate",
                        "title": "ব্যাংক গ্যারান্টির শেষ তারিখ",
                        "render": function (data) {
                            if (data && data.startsWith("/Date(")) {
                                var timestamp = parseInt(data.replace("/Date(", "").replace(")/", ""));
                                var expiryDate = new Date(timestamp);
                                var today = new Date();

                                // Formatting the date in 'DD/MM/YYYY' format
                                var formattedDate = expiryDate.toLocaleDateString('en-GB');

                                // Check if expired
                                if (expiryDate < today) {
                                    return `<span style="color: red; font-weight: bold;">${formattedDate}</span>`;
                                }
                                return formattedDate;
                            }
                            return '';
                        }
                    },
                    { "data": "ScanDocument", "title": "পারফরমেন্স সিকিউরিটি / ব্যাংক গ্যারান্টি ডকুমেন্ট" }
                ]
            });

            // Apply filters automatically when the user changes any of the filter fields
            //$('#StartingDate, #EndingDate').on('change input keyup', function () {
            //    table.ajax.reload();
            //});
        });

    </script>

}