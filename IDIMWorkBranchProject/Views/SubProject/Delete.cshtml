@model IDIMWorkBranchProject.Models.WBP.SubProjectVm
@{
    ViewBag.Title = "Sub Project ";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Sub Project </h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("List","Project")">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        Sub Project
                    </a>
                </li>
                <li class="active">
                    <strong>Delete</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Delete</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Create","SubProject")" class="btn btn-success">Create New</a>
                <a href="@Url.Action("Edit","SubProject", new { id = Model.SubProjectId })" class="btn btn-primary">Edit</a>
                <a href="@Url.Action("List","SubProject")" class="btn">List</a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <form class="form-horizontal">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ProjectId, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <span class="label label-primary">
                                            @Html.DisplayFor(m => m.ProjectName)
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.UnitId, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.DisplayFor(m => m.UnitId)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.StatusTypeId, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.DisplayFor(m => m.StatusTypeId)
                                        @Html.ValidationMessageFor(model => model.StatusTypeId)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.SubProjectTitle, new { @class = "col-md-2 form-label" })
                                    <div class="col-md-10">
                                        @Html.DisplayFor(m => m.SubProjectTitle)
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Description, new { @class = "col-md-2 form-label" })
                                    <div class="col-md-10">
                                        @Html.DisplayFor(m => m.Description)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConstructionFirmId, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.DisplayFor(m => m.ConstructionFirmId)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.AgreementCost, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.DisplayFor(m => m.AgreementCost)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.StartDate, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.DisplayFor(m => m.StartDate)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.EndDate, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.DisplayFor(m => m.EndDate)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.HandOverDate, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.DisplayFor(m => m.HandOverDate)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Status, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.DisplayFor(m => m.Status)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Remark, new { @class = "col-md-2 form-label" })
                                    <div class="col-md-10">
                                        @Html.DisplayFor(m => m.Remark)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>

                    @using (Html.BeginForm("Delete", "Project", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("SubProjectId")

                        <a href="@Url.Action("List", "SubProject")" class="btn">Cancel</a>
                        <div class="pull-right">
                            <input type="submit" class="btn btn-success" value="Delete" />
                        </div>
                    }

                </div>
            </div>
        </div>
    </section>
</div>