@model IDIMWorkBranchProject.Models.Setup.FiscalYearVm
@{
    ViewBag.Title = "Fiscal Year";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Fiscal Year</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("List","FiscalYear")">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        Fiscal Year
                    </a>
                </li>
                <li class="active">
                    <strong>Create</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Create</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("List","FiscalYear")" class="btn">
                    <i class="fa fa-list" aria-hidden="true"></i>
                    List
                </a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    @using (Html.BeginForm("Create", "FiscalYear", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(m => m.FiscalYearDescription, new { @class = "col-md-2 form-label required" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.FiscalYearDescription, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FiscalYearDescription)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.StartDate, new { @class = "col-md-2 form-label required" })
                            <div class="col-md-10">
                                <div class="input-group">
                                    @Html.EditorFor(m => m.StartDate, new { htmlAttributes = new { @class = "form-control datepicker" }})
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                </div>
                                @Html.ValidationMessageFor(model => model.StartDate)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.EndDate, new { @class = "col-md-2 form-label required" })
                            <div class="col-md-10">
                                <div class="input-group">
                                    @Html.EditorFor(m => m.EndDate, new { htmlAttributes = new { @class = "form-control datepicker" }})
                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                </div>
                                @Html.ValidationMessageFor(model => model.EndDate)
                            </div>
                        </div>

                        <div class="pull-right">
                            <input type="submit" class="btn btn-success" value="Save" />
                            <input type="reset" class="btn" value="Clear" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>