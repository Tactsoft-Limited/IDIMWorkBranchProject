@using IDIMWorkBranchProject.Extentions
@using IDIMWorkBranchProject.Models.Wbpm
@model ContractAgreementVm

@{
    ViewData["Title"] = "Delete Contract Agreement";
}

<h2 class="mb-0">Delete Contract Agreement</h2>

<p>Are you sure you want to delete this record?</p>

<div class="card shadow-lg border-0 rounded">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0 text-light">চুক্তিপত্র বিবরণ</h5>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>নির্মান কাজের শিরোনাম:</strong> @Model.ProjectWorkTitle</li>
            <li class="list-group-item"><strong>ঠিকাদার প্রতিষ্ঠান:</strong> @Model.ConstructionFirm</li>
            <li class="list-group-item"><strong>চুক্তির তারিখ:</strong> @Model.AgreementDate</li>
            <li class="list-group-item"><strong>অতিরিক্ত মহাপরিচালক:</strong> @Model.AddDGName</li>
            <li class="list-group-item"><strong>উপ-মহাপরিচালক:</strong> @Model.DDGName</li>
            <li class="list-group-item"><strong>প্রকল্প পরিচালক:</strong> @Model.ProjectDirectorName</li>
            <li class="list-group-item"><strong>পরিচালক:</strong> @Model.DirectorName</li>
            <li class="list-group-item"><strong>চুক্তি ডকুমেন্ট:</strong>@Model.ScanDocument</li>
        </ul>
    </div>
    @using (Html.BeginForm("DeleteConfirmed", "ContractAgreement", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.ContractAgreementId)

        <div class="card-footer text-end">
            <a href="@Url.Action("details/"+Model.ProjectWorkId, "ProjectWork") class="btn btn-secondary">Cancel</a>
            <input type="submit" class="btn btn-danger" value="Delete" />
        </div>
    }

</div>
