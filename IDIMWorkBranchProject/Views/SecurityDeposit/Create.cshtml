@using IDIMWorkBranchProject.Models.WBP
@model IDIMWorkBranchProject.Models.WBP.SecurityDepositVm
@{
    ViewBag.Title = "Create";
}

<div id="message"></div>
<div class='col-md-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Security Deposit</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="#"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("List","SecurityDeposit")">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        Security Deposit
                    </a>
                </li>
                <li class="active">
                    <strong>Create</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box">
        <header class="panel_header">
            <h2 class="title pull-left">Create</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("List","SecurityDeposit")" class="btn">
                    <i class="fa fa-list" aria-hidden="true"></i>
                    List
                </a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("Create", "SecurityDeposit", FormMethod.Post, new { @class = "form-horizontal", id = "SecurityDeposit-create-form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.SubProjectId, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(m => m.SubProjectId, Model.SubProjectDropdown, "Select Sub Project", new { @class = "select2" })
                                        @Html.ValidationMessageFor(model => model.SubProjectId)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Letterno, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.Letterno, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Letterno)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Letterdate, new { @class = "col-md-4 form-label" })
                                            <div class="col-md-8">
                                                <div class="input-group">
                                                    @Html.EditorFor(m => m.Letterdate, new { htmlAttributes = new { @class = "form-control datepicker" } })
                                                    <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                </div>
                                                @Html.ValidationMessageFor(model => model.Letterdate)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            @Html.LabelFor(m => m.Amount, new { @class = "col-md-4 form-label" })
                                            <div class="col-md-8">
                                                @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Amount)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Remark, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.TextAreaFor(m => m.Remark, new { @class = "form-control", @rows = '3' })
                                        @Html.ValidationMessageFor(model => model.Remark)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="pull-right">
                            <input type="submit" class="btn btn-success" value="Save" />
                            <input type="reset" class="btn" value="Clear" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>

