@using IDIMWorkBranchProject.Extentions
@using IDIMWorkBranchProject.Models.Wbpm
@model ADPProjectSearchVm

@{
    ViewBag.Title = "List";
}


<div class="page-title">
    <div class="pull-left">
        <h3 class="title">নির্মাণ পরিদপ্তর</h3>
    </div>
    <div class="pull-right hidden-xs">
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>ড্যাশবোর্ড</a>
            </li>
            <li class="active">
                <strong>প্রকল্প</strong>
            </li>
        </ol>
    </div>
</div>

<section class="box">
    <header class="panel_header">
        <h2 class="title pull-left">প্রকল্প তালিকা</h2>
        <div class="actions panel_actions pull-right">
            <a href="@Url.Action("Create","ADPProject")" class="btn btn-success">নতুন প্রকল্প সংযুক্ত করুন</a>
        </div>
    </header>
    <div class="content-body">
        <div class="row">
            <div class="col-xs-12">
                <table id="aDPProjectTable" class="table table-striped table-bordered" width="100%" cellspacing="0">
                </table>
            </div>
        </div>

        <partial name="_ModalPartial" />
    </div>
</section>


@section scripts {
    <script src="~/Scripts/banglaNumberConverter.js"></script>
    <script>
        $(document).ready(function () {
            var table = $('#aDPProjectTable').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": baseUrl + "/ADPProject/LoadData",  // Make sure this is correct
                    "type": "POST",
                    "contentType": "application/json",  // Sending JSON data
                    "data": function (d) {
                        // Manually create a JSON object for the POST request
                        return JSON.stringify({
                            SearchValue: d.search.value,  // Global search term
                            StartingDate: $('#StartingDate').val() ? $('#StartingDate').val() : null,
                            EndingDate: $('#EndingDate').val() ? $('#EndingDate').val() : null,
                            Draw: d.draw,
                            PageIndex: d.start / d.length,  // Pagination: starting index
                            PageSize: d.length,  // Pagination: number of records per page
                            SortColumn: d.order[0] ? d.columns[d.order[0].column].data : 'ADPProjectId',
                            SortDirection: d.order[0] ? d.order[0].dir : 'asc'
                        });
                    },
                    "dataSrc": function (json) {
                        console.log(json.data)
                        return json.data;
                    }
                },
                "columns": [
                    { "data": "ADPProjectId", "title": "আইডি", "visible": false },
                    {
                        "data": "ProjectTitle",
                        "title": "প্রকল্পের নাম",
                        "render": function (data, type, row) {
                            // Assuming 'id' is the unique identifier for the project
                            return `<a href="${baseUrl}/ADPProject/Details/${row.ADPProjectId}">${data}</a>`;
                        }
                    },
                    { "data": "MinistryDepartment", "title": "মন্ত্রণালয়/বিভাগ" },
                    {
                        "data": "EstimatedExpenses",
                        "title": "প্রাক্কলিত ব্যয়",
                        "render": function (data, type, row) {
                            const number = Number(data);
                            return isNaN(number) ? data : number.toLocaleString('bn-BD');
                        }
                    },
                    {
                        "data": "StartingDate",
                        "title": "শুরুর তারিখ",
                        "render": data => data ? new Date(Date.parse(data)).toLocaleDateString('bn-BD') : ''
                    },
                    {
                        "data": "EndingDate",
                        "title": "শেষের তারিখ",
                        "render": data => data ? new Date(Date.parse(data)).toLocaleDateString('bn-BD') : ''
                    },
                    {
                        "data": "NoOfWork",
                        "title": "প্যাকেজ সংখ্যা",
                        "render": function (data) {
                            const num = Number(data);
                            return isNaN(num) ? data : num.toLocaleString('bn-BD');
                        }
                    }
                ]
            });

            // Apply filters automatically when the user changes any of the filter fields
            $('#StartingDate, #EndingDate').on('change input keyup', function () {
                table.ajax.reload();
            });
        });

    </script>

}