</div>
<div class="clearfix"></div>
<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">List</h2>
            <div class="actions panel_actions pull-SubProjectDetails">
                <a href="@Url.Action("Create","SubProjectDetails")" class="btn btn-success">Create New</a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            @using (Html.BeginForm("List", "SubProjectDetails", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    @*<div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.SubProjectId, new { @class = "col-md-4 form-label" })
