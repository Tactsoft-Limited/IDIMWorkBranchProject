@model IDIMWorkBranchProject.Models.WBP.ProjectExtendVm
@{
    ViewBag.Title = "Project Extend";
}

<div id="message"></div>
<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Project Extend</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("List","ProjectExtend")">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        Project Extend
                    </a>
                </li>
                <li class="active">
                    <strong>Edit</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Edit</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Create","ProjectExtend")" class="btn btn-success">Create New</a>
                <a href="@Url.Action("Delete", "ProjectExtend", new { id = Model.ProjectExtendId })" class="btn btn-danger">Delete</a>
                <a href="@Url.Action("List","ProjectExtend")" class="btn">List</a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    @using (Html.BeginForm("Edit", "ProjectExtend", FormMethod.Post, new { @class = "form-horizontal", id = "Project-edit-form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.ProjectExtendId)
                        @Html.HiddenFor(m=>m.SubProjectId)
                        @Html.HiddenFor(m => m.SubProjectTitle)

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.SubProjectId, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <span class="label label-primary">
                                            @Html.DisplayFor(model => model.SubProjectTitle)
                                        </span>
                                        @Html.ValidationMessageFor(model => model.SubProjectId)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ExtendDate, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            @Html.EditorFor(m => m.ExtendDate, new { htmlAttributes = new { @class = "form-control datepicker" } })
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.ExtendDate)
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.NoOfDays, new {@class = "col-md-4 form-label"})
                                    <div class="col-md-8">
                                        @Html.TextBoxFor(m => m.NoOfDays, new {@class = "form-control"})
                                        @Html.ValidationMessageFor(model => model.NoOfDays)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.NewHandOverDate, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <div class="input-group">
                                            @Html.EditorFor(m => m.NewHandOverDate, new { htmlAttributes = new { @class = "form-control datepicker" } })
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.NewHandOverDate)
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Reason, new { @class = "col-md-2 form-label" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(m => m.Reason, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Reason)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Remark, new { @class = "col-md-2 form-label" })
                                    <div class="col-md-10">
                                        @Html.TextAreaFor(m => m.Remark, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Remark)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.AttachmentId, new { @class = "col-md-2 form-label" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(m => m.AttachmentId)
                                        @Html.ValidationMessageFor(model => model.AttachmentId)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="pull-right">
                            <input type="submit" class="btn btn-success" value="Update" />
                            <input type="reset" class="btn" value="Clear" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>
