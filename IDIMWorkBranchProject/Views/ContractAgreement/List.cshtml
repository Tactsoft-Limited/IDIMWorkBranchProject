@using IDIMWorkBranchProject.Extentions
@using IDIMWorkBranchProject.Models.Wbpm
@model ContractAgreementSearchVm

@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-title">
    <div class="pull-left">
        <h3 class="title">চুক্তিপত্র </h3>
    </div>
    <div class="pull-right hidden-xs">
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>ড্যাশবোর্ড</a>
            </li>
            <li class="active">
                <strong>চুক্তিপত্র</strong>
            </li>
        </ol>
    </div>
</div>

<section class="box">
    <header class="panel_header">
        <h2 class="title pull-left">চুক্তিপত্রের তালিকা</h2>
    </header>
    <div class="content-body">
        <div class="row">
            <div class="col-xs-12">
                <table id="ContractAgreement" class="table table-striped table-bordered" width="100%" cellspacing="0">
                </table>
            </div>
        </div>

        <partial name="_ModalPartial" />
    </div>
</section>


@section scripts {

    <script>
        $(document).ready(function () {
            var table = $('#ContractAgreement').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": baseUrl + "/ContractAgreement/LoadData",  // Make sure this is correct
                    "type": "POST",
                    "contentType": "application/json",  // Sending JSON data
                    "data": function (d) {
                        // Manually create a JSON object for the POST request
                        return JSON.stringify({
                            SearchValue: d.search.value,  // Global search term
                            Draw: d.draw,
                            PageIndex: d.start / d.length,  // Pagination: starting index
                            PageSize: d.length,  // Pagination: number of records per page
                            SortColumn: d.order[0] ? d.columns[d.order[0].column].data : 'ContractAgreementId',
                            SortDirection: d.order[0] ? d.order[0].dir : 'asc'
                        });
                    },
                    "dataSrc": function (json) {
                        console.log(json.data)
                        return json.data;
                    }
                },
                "columns": [
                    { "data": "ContractAgreementId", "title": "আইডি", "visible": false },
                    { "data": "ProjectWorkId", "title": "আইডি", "visible": false },
                    {
                        "data": "ProjectWorkTitleB",
                        "title": "নির্মাণ কাজের নাম",
                        "render": function (data, type, row) {
                            // Assuming 'id' is the unique identifier for the project
                            return `<a href="${baseUrl}/ProjectWork/Details/${row.ProjectWorkId}">${data}</a>`;
                        }
                    },
                    { "data": "ConstructionFirm", "title": "ঠিকাদারি প্রতিষ্ঠান" },
                    {
                        "data": "AgreementDate",
                        "title": "চুক্তির তারিখ",
                        "render": function (data) {
                            if (data && data.startsWith("/Date(")) {
                                var timestamp = parseInt(data.replace("/Date(", "").replace(")/", ""));
                                return new Date(timestamp).toLocaleDateString('en-GB');
                            }
                            return '';
                        }
                    },
                    { "data": "ScanDocument", "title": "ডকুমেন্ট ফাইল" }
                ]
            });

            // Apply filters automatically when the user changes any of the filter fields
            $('#StartingDate, #EndingDate').on('change input keyup', function () {
                table.ajax.reload();
            });
        });

    </script>

}

