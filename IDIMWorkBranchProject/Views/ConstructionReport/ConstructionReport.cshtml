@model IDIMWorkBranchProject.Models.Report.ReportFilterVm
@{
    ViewBag.Title = "Report";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h4 class="title">Construction Details</h4>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="#"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="#">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        Construction Details
                    </a>
                </li>
                <li class="active">
                    <strong>Filter</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Filter</h2>
            <div class="actions panel_actions pull-right">
                <a href="#" class="btn">
                    <i class="fa fa-list" aria-hidden="true"></i>
                    List
                </a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    @using (Html.BeginForm("ConstructionReport", "ConstructionReport", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConsultantId, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(m => m.ConsultantId, Model.ConsultantDropdown, "Select Consultant", new { @class = "select2" })
                                        @Html.ValidationMessageFor(model => model.ConsultantId)
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.FiscalYearId, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        @Html.DropDownListFor(m => m.FiscalYearId, Model.FiscalYearDropdown, "Select Fiscal Year", new { @class = "select2" })
                                        @Html.ValidationMessageFor(model => model.FiscalYearId)
                                    </div>
                                </div>

                                <div class="form-group pull-right">
                                    <input type="submit" class="btn btn-success" value="Generate Report" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>






