@model IEnumerable<IDIMWorkBranchProject.Models.User.MenuVm>
@{
    ViewBag.Title = "Menu";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Menu</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li class="active">
                    <strong>Menu</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">List</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Create","Menu")" c class="btn btn-success">Create New</a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <table id="DataGrid" class="table table-striped table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th style="width:35px;">@Html.DisplayNameFor(m => m.MenuId)</th>
                                <th>@Html.DisplayNameFor(m => m.Title)</th>
                                <th>@Html.DisplayNameFor(m => m.ControllerName)</th>
                                <th>@Html.DisplayNameFor(m => m.ApplicationName)</th>
                                <th style="width:137px">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var v in Model)
                            {
                                <tr>
                                    <td>@v.MenuId</td>
                                    <td>@v.Title</td>
                                    <td>@v.ControllerName</td>
                                    <td>
                                        <span class="label label-success">
                                            @v.ApplicationName
                                        </span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Menu", new {id = v.MenuId})">
                                            <span class="label label-primary"><i class="fa fa-edit"></i> Edit</span>
                                        </a>
                                        <a href="@Url.Action("Delete", "Menu", new {id = v.MenuId})">
                                            <span class="label label-danger"><i class="fa fa-remove"></i> Remove</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#DataGrid').DataTable({
                "aaSorting": [],
                "columns": [
                    null,
                    null,
                    null,
                    null,
                    { "orderable": false }
                ]
            });
        });
    </script>
}

