@model IDIMWorkBranchProject.Models.WBP.SubProjectDetailsVm
@{
    ViewBag.Title = "Delete";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Sub Project Details </h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("List","SubProjectDetails")">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        Sub Project Details
                    </a>
                </li>
                <li class="active">
                    <strong>Delete</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Delete</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Create","SubProjectDetails")" class="btn btn-success">Create New</a>
                <a href="@Url.Action("Edit","SubProjectDetails", new { id = Model.SubProjectDetailsId })" class="btn btn-success">Edit</a>
                <a href="@Url.Action("List","SubProjectDetails")" class="btn">List</a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <form class="form-horizontal">

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.SubProjectId, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <span class="label label-primary">
                                            @Html.DisplayFor(model => model.SubProjectTitle)
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.BGOrPayOrder, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <span class="label label-primary">
                                            @Html.DisplayFor(model => model.BGOrPayOrder)
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.WorkOrderDate, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <span class="label label-primary">
                                            @Html.DisplayFor(model => model.WorkOrderDate)
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Progress, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <span class="label label-primary">
                                            @Html.DisplayFor(model => model.Progress)
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Installment1, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <span class="label label-primary">
                                            @Html.DisplayFor(model => model.Installment1)
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Installment2, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <span class="label label-primary">
                                            @Html.DisplayFor(model => model.Installment2)
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Installment4, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <span class="label label-primary">
                                            @Html.DisplayFor(model => model.Installment4)
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Installment5, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <span class="label label-primary">
                                            @Html.DisplayFor(model => model.Installment5)
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.TotalAmmount, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <span class="label label-primary">
                                            @Html.DisplayFor(model => model.TotalAmmount)
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.BGBMiscellaneousDeposit, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <span class="label label-primary">
                                            @Html.DisplayFor(model => model.BGBMiscellaneousDeposit)
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.TenPercentPaidFarm, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <span class="label label-primary">
                                            @Html.DisplayFor(model => model.TenPercentPaidFarm)
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.TenPercentPaidSimantoFund, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <span class="label label-primary">
                                            @Html.DisplayFor(model => model.TenPercentPaidSimantoFund)
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ContractorPayable, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <span class="label label-primary">
                                            @Html.DisplayFor(model => model.ContractorPayable)
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Remark, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        <span class="label label-primary">
                                            @Html.DisplayFor(model => model.Remark)
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-check form-check-inline">
                                    @Html.CheckBoxFor(m => m.hasCompleted, new { @class = "form-check-input" })
                                    <label class="form-check-label" for="materialInline3">NOA Completed</label>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-check form-check-inline">
                                    @Html.CheckBoxFor(m => m.BGConfirmed, new { @class = "form-check-input" })
                                    <label class="form-check-label" for="materialInline3">BG Confirmed</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-check form-check-inline">
                                    @Html.CheckBoxFor(m => m.ContractComplete, new { @class = "form-check-input" })
                                    <label class="form-check-label" for="materialInline3">Contract Completed</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-check form-check-inline">
                                    @Html.CheckBoxFor(m => m.DesignSent, new { @class = "form-check-input" })
                                    <label class="form-check-label" for="materialInline3">Schedule & Drawing/Design Sent</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-check form-check-inline">
                                    @Html.CheckBoxFor(m => m.IsDelivered, new { @class = "form-check-input" })
                                    <label class="form-check-label" for="materialInline3">Delivered</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-check form-check-inline">
                                    @Html.CheckBoxFor(m => m.IsFinalBillPaid, new { @class = "form-check-input" })
                                    <label class="form-check-label" for="materialInline3">Paid Final Bill</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-check form-check-inline">
                                    @Html.CheckBoxFor(m => m.TenPercentGuarantee, new { @class = "form-check-input" })
                                    <label class="form-check-label" for="materialInline3">Ten Percent Guarantee</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-check form-check-inline">
                                    @Html.CheckBoxFor(m => m.FivePercentSecurityMoney, new { @class = "form-check-input" })
                                    <label class="form-check-label" for="materialInline3">Five Percent Security Money</label>
                                </div>
                            </div>
                        </div>

                    </form>

                    @using (Html.BeginForm("Delete", "SubProjectDetails", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("SubProjectDetailsId")

                        <a href="@Url.Action("List", "SubProjectDetails")" class="btn">Cancel</a>
                        <div class="pull-right">
                            <input type="submit" class="btn btn-success" value="Delete" />
                        </div>
                    }

                </div>
            </div>
        </div>
    </section>
</div>

