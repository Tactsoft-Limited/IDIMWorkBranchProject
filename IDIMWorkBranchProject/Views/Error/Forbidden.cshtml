@model HandleErrorInfo
@{
    ViewBag.Title = "Error";
    Layout = "../Shared/_ErrorLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <section class="box nobox ">
                <div class="content-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <h1 class="page_error_code text-bgb">403</h1>
                            <h1 class="page_error_info">Oops! Page Forbidden due to proper application or page permission</h1>
                            <div class="row">
                                <div class="col-md-offset-3 col-sm-offset-3 col-xs-offset-2 col-xs-8 col-sm-6">
                                    <div class="text-center page_error_btn">
                                        <a class="btn btn-bgb btn-lg" href='#'><i class='fa fa-location-arrow'></i> &nbsp; Back to Home</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>