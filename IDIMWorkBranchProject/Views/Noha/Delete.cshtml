@using IDIMWorkBranchProject.Extentions
@using IDIMWorkBranchProject.Models.Wbpm
@model NohaVm

@{
    ViewData["Title"] = "Delete NOHA";
}

<h2 class="mb-0">Delete NOHA</h2>

<p>Are you sure you want to delete this record?</p>

<div class="card shadow-lg border-0 rounded">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0 text-light">এনওএইচএ বিবরণ</h5>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>নির্মান কাজের শিরোনাম:</strong> @Model.ProjectWorkTitleB</li>
            <li class="list-group-item"><strong>লেটার নং:</strong> @Model.LetterNo</li>
            <li class="list-group-item"><strong>এনওএইচ তারিখ:</strong> @Model.NohaDate</li>            
            <li class="list-group-item"><strong>এনওএইচএ ডকুমেন্ট:</strong>@Model.ScanDocument</li>
        </ul>
    </div>
    @using (Html.BeginForm("DeleteConfirmed", "Noha", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.NohaId)

        <div class="card-footer text-end">
            <a href="@Url.Action("details/"+Model.ProjectWorkId, "ProjectWork") class="btn btn-secondary">Cancel</a>
            <input type="submit" class="btn btn-danger" value="Delete" />
        </div>
    }

</div>
