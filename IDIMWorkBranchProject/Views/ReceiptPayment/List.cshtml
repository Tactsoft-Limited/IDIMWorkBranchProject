@using IDIMWorkBranchProject.Extentions
@model IDIMWorkBranchProject.Models.WBP.ReceiptPaymentSearchVm
@{
    ViewBag.Title = "Receipt Payment";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Receipt Payment </h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li class="active">
                    <strong>Receipt Payment</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">List</h2>
            <div class="actions panel_actions pull-right">
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            @using (Html.BeginForm("List", "ReceiptPayment", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            @Html.LabelFor(m => m.ProjectName, new { @class = "col-md-2 form-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.ProjectName, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.FiscalYearId, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(m => m.FiscalYearId, Model.FiscalYearDropdown, "Select Fiscal Year", new { @class = "select2" })
                                @Html.ValidationMessageFor(model => model.FiscalYearId)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.QuarterId, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.DropDownListFor(m => m.QuarterId, Model.QuarterDropdown, "Select Unit", new { @class = "select2" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.DocumentType, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.EnumDropDownListFor(m => m.DocumentType, "Select Document Type", new { @class = "select2" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.LabelFor(m => m.SourceType, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.EnumDropDownListFor(m => m.SourceType, "Select Source Type", new { @class = "select2" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <input type="submit" class="btn btn-success pull-right" value="Search" />
                    </div>
                </div>
            }
            <div class="row">
                <div class="col-xs-12">
                    <table id="DataGrid" class="table table-striped table-bordered" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Project</th>
                            <th>Fiscal Year</th>
                            <th>Quarter</th>
                            <th>Source Type</th>
                            <th>Document Type</th>
                            <th>Receipt Amount</th>
                            <th>Receipt Date</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var v in Model.ReceiptPayments)
                        {
                            <tr>
                                <td>@v.ReceiptPaymentId</td>
                                <td>@v.ProjectName</td>
                                <td>@v.FiscalYearName</td>
                                <td>@v.QuarterName</td>
                                <td>@v.SourceType</td>
                                <td>@v.DocumentType</td>
                                <td>@v.ReceiptAmount</td>
                                <td>@v.ReceiptDate.ToNullableShortDateString()</td>
                                <td>
                                    <a href="@Url.Action("Edit", "ReceiptPayment", new {id = v.ReceiptPaymentId})">
                                        <span class="label label-primary"><i class="fa fa-edit"></i> Edit</span>
                                    </a>
                                    <a href="@Url.Action("Delete", "ReceiptPayment", new {id = v.ReceiptPaymentId})">
                                        <span class="label label-danger"><i class="fa fa-remove"></i> Remove</span>
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#DataGrid').DataTable({
                "aaSorting": [],
                "columns": [
                    { className: "id", searchable: false },
                    null,
                    null,
                    null,
                    null,
                    null,
                    null,
                    { className: "date", searchable: false },
                    {width:"145px", "orderable": false }
                ]
            });
        });
    </script>
}

