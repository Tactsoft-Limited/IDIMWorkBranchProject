@model IEnumerable<IDIMWorkBranchProject.Models.Setup.QuarterVm>
@{
    ViewBag.Title = "Quarter";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Quarter</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li class="active">
                    <strong>Quarter</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">List</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Create","Quarter")" class="btn btn-success">Create New</a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <table id="DataGrid" class="table table-striped table-bordered" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.QuarterId)</th>
                                <th>@Html.DisplayNameFor(m => m.QuarterName)</th>
                                <th>@Html.DisplayNameFor(m => m.MonthFrom)</th>
                                <th>@Html.DisplayNameFor(m => m.MonthTo)</th>
                                <th>@Html.DisplayNameFor(m => m.YearFrom)</th>
                                <th>@Html.DisplayNameFor(m => m.YearTo)</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var v in Model)
                            {
                                <tr>
                                    <td>@v.QuarterId</td>
                                    <td>@v.QuarterName</td>
                                    <td>@v.MonthFrom</td>
                                    <td>@v.MonthTo</td>
                                    <td>@v.YearFrom</td>
                                    <td>@v.YearTo</td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Quarter", new {id = v.QuarterId})">
                                            <span class="label label-primary"><i class="fa fa-edit"></i> Edit</span>
                                        </a>
                                        <a href="@Url.Action("Delete", "Quarter", new {id = v.QuarterId})">
                                            <span class="label label-danger"><i class="fa fa-remove"></i> Remove</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>


@section scripts {
    <script>
        $(document).ready(function () {
            $('#DataGrid').DataTable({
                "aaSorting": [],
                "columns": [
                    { className: "id", searchable: false },
                    null,
                    null,
                    null,
                    null,
                    null,
                    { width: "137px", "orderable": false }
                ]
            });
        });
    </script>
}

