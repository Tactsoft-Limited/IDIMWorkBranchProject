@model IDIMWorkBranchProject.Models.Setup.ConstructionFirmVm
@{
    ViewBag.Title = "Construction Firm";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Construction Firm</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("List","ConstructionFirm")">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        Construction Firm
                    </a>
                </li>
                <li class="active">
                    <strong>Delete</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Delete</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Create","ConstructionFirm")" class="btn btn-success">Create New</a>
                <a href="@Url.Action("Edit","ConstructionFirm", new { id = Model.ConstructionFirmId })" class="btn btn-success">Edit</a>
                <a href="@Url.Action("List","ConstructionFirm")" class="btn">List</a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ConstructionFirmName, new { @class = "col-md-4 form-label required" })
                                    <div class="col-md-8">
                                        : @Html.DisplayFor(m => m.ConstructionFirmName, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.CompanyName, new { @class = "col-md-4 form-label required" })
                                    <div class="col-md-8">
                                        : @Html.DisplayFor(m => m.CompanyName, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Address, new { @class = "col-md-2 form-label" })
                                    <div class="col-md-10">
                                        : @Html.DisplayFor(m => m.Address, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ContactPerson, new { @class = "col-md-2 form-label" })
                                    <div class="col-md-10">
                                        : @Html.DisplayFor(m => m.ContactPerson, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ContactNumber, new { @class = "col-md-4 form-label required" })
                                    <div class="col-md-8">
                                        : @Html.DisplayFor(m => m.ContactNumber, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.ContactEmail, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        : @Html.DisplayFor(m => m.ContactEmail, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Enlisted, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        : @Html.DisplayFor(m => m.Enlisted, new { @class = "form-control  iCheck" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Status, new { @class = "col-md-4 form-label" })
                                    <div class="col-md-8">
                                        : @Html.DisplayFor(m => m.Status, new { @class = "form-control  iCheck" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Comments, new { @class = "col-md-2 form-label" })
                                    <div class="col-md-10">
                                        : @Html.DisplayFor(m => m.Comments, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Comments)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @using (Html.BeginForm("Delete", "ConstructionFirm", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("ConstructionFirmId")

                        <a href="@Url.Action("List", "ConstructionFirm")" class="btn">Cancel</a>
                        <div class="pull-right">
                            <input type="submit" class="btn btn-success" value="Delete" />
                        </div>
                    }

                </div>
            </div>
        </div>
    </section>
</div>