@model IDIMWorkBranchProject.Models.WBP.ConsultantSearchVm
@{
    ViewBag.Title = "List";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Consultant</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li class="active">
                    <strong>Consultant</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">List</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Create","Consultant")" class="btn btn-success">Create New</a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            @using (Html.BeginForm("List", "Consultant", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name, new { @class = "col-md-4 form-label" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <input type="submit" class="btn btn-success pull-right" value="Search" />
                    </div>
                </div>
            }

            <div class="row">
                <div class="col-xs-12">
                    <table id="DataGrid" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Consultant Name</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>Fax</th>
                                <th>Address</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var v in Model.Consultant)
                            {
                            <tr>
                                <td>@v.ConsultantId</td>
                                <td>@v.Name</td>
                                <td>@v.Phone</td>
                                <td>@v.Email</td>
                                <td>@v.Fax</td>
                                <td>@v.Address</td>
                                <td>
                                    <a href="@Url.Action("Edit", "Consultant", new {id = v.ConsultantId})">
                                        <span class="label label-primary"><i class="fa fa-edit"></i> Edit</span>
                                    </a>
                                    <a href="@Url.Action("Delete", "Consultant", new {id = v.ConsultantId})">
                                        <span class="label label-danger"><i class="fa fa-remove"></i> Remove</span>
                                    </a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
@section scripts {
    <script>
        $(document).ready(function () {
            $('#DataGrid').DataTable({
                "aaSorting": [],
                "columns": [
                    {className:"id", searchable:false},
                    null,
                    null,
                    null,
                    null,
                    null,
                    { width:"145px","orderable": false }
                ]
            });
        });
    </script>
}

