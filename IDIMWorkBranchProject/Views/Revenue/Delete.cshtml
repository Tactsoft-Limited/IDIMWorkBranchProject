@using IDIMWorkBranchProject.Extentions
@using IDIMWorkBranchProject.Models.Wbpm
@model RevenueVm

@{
    ViewData["Title"] = "Delete Revenue";
}

<h2 class="mb-0">Delete Revenue</h2>

<p>Are you sure you want to delete this record?</p>

<div class="card shadow-lg border-0 rounded">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0 text-light">Revenue Details</h5>
    </div>
    <div class="card-body">
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>কার্যবিবরনীঃ </strong> @Model.WorkTitleB</li>
            <li class="list-group-item"><strong>প্রাক্কলিত ব্যয়ঃ </strong> @Model.EstimateCost</li>
            <li class="list-group-item"><strong>মন্তব্যঃ </strong> @Model.Remarks</li>            
        </ul>
    </div>
    @using (Html.BeginForm("DeleteConfirmed", "Revenue", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.RevenueId)

        <div class="card-footer text-end">
            <a href="@Url.Action("List","Revenue") class="btn btn-secondary">Cancel</a>
            <input type="submit" class="btn btn-danger" value="Delete" />
        </div>
    }

</div>