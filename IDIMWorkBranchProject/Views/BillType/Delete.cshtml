@model IDIMWorkBranchProject.Models.Setup.BillTypeVm
@{
    ViewBag.Title = "Bill Type";
}

<div class='col-xs-12'>
    <div class="page-title">
        <div class="pull-left">
            <h1 class="title">Bill Type</h1>
        </div>
        <div class="pull-right hidden-xs">
            <ol class="breadcrumb">
                <li>
                    <a href="@Url.Action("Index","Dashboard")"><i class="fa fa-home"></i>Dashboard</a>
                </li>
                <li>
                    <a href="@Url.Action("List","BillType")">
                        <i class="fa fa-list" aria-hidden="true"></i>
                        Bill Type
                    </a>
                </li>
                <li class="active">
                    <strong>Delete</strong>
                </li>
            </ol>
        </div>
    </div>
</div>
<div class="clearfix"></div>

<div class="col-lg-12">
    <section class="box ">
        <header class="panel_header">
            <h2 class="title pull-left">Delete</h2>
            <div class="actions panel_actions pull-right">
                <a href="@Url.Action("Create","BillType")" class="btn btn-success">Create New</a>
                <a href="@Url.Action("Edit","BillType", new { id = Model.BillTypeId })" class="btn btn-success">Edit</a>
                <a href="@Url.Action("List","BillType")" class="btn">List</a>
                <a class="box_toggle fa fa-chevron-down"></a>
            </div>
        </header>
        <div class="content-body">
            <div class="row">
                <div class="col-xs-12">
                    <form class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(m => m.BillTypeName, new { @class = "col-md-2 form-label" })
                            <div class="col-md-10">
                                @Html.DisplayFor(m => m.BillTypeName, new { @class = "form-control", disabled = "disabled" })
                            </div>
                        </div>                                                
                    </form>
                  
                    @using (Html.BeginForm("Delete", "BillType", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("BillTypeId")
                        
                        <a href="@Url.Action("List", "BillType")" class="btn">Cancel</a>
                        <div class="pull-right">
                            <input type="submit" class="btn btn-success" value="Delete" />
                        </div>
                    }

                </div>
            </div>
        </div>
    </section>
</div>